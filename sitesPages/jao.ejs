<!DOCTYPE html>
<html>
  <head>
    <title>Record Book</title>

    <link rel="stylesheet" href="/assest/css/home.css" />
  </head>
  <body>
    <%- include('_navbar'); %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12">
          <p><%=data.vname.vname%> > <%=data.mname%></p>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row" style="float: right">
        <div class="col-sm-11">
          <button
            class="btn btn-info"
            data-toggle="modal"
            data-target="#myModal"
          >
            Add Journey
          </button>
          <!-- Modal -->
          <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">
                    &times;
                  </button>
                  <h4 class="modal-title">Add Vehical Journey details</h4>
                </div>
                <form
                  action="/addJourney/?id=<%=data._id%>"
                  method="post"
                  class="form-group"
                >
                  <div class="modal-body">
                    <label for="title">Journry Name</label>
                    <input
                      type="text"
                      name="title"
                      class="form-control"
                      id="title"
                      required
                    />
                    <label for="arrival">Arrival date</label>
                    <% var iu=new Date() %>
                    <input
                      type="date"
                      name="arrival"
                      class="form-control"
                      id="arrival"
                      value='<%=iu.toISOString().split("T")[0]%>'
                      required
                    />
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Add</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- variable -->
          <% let dataTarget="#myModal1"; let dataTargetId="myModal1"; let
          name="Add Other Expensive"; let content="Enter Other Expensive Name";
          let addlink="/addOtherExpensive/?id="+data._id;%>
          <!--partails-->
          <%-
          include('_popup1',{dataTarget:dataTarget,dataTargetId:dataTargetId,
          name:name,content:content,addlink:addlink})%>
        </div>

        <div class="col-sm-1"></div>
      </div>
    </div>
    <div class="container-fluid">
      <h2 class="page-header"><%=data.mname%></h2>
      <% for (i of data.journeys.reverse()){%>
      <div class="btn btn-default btn-lg" role="button" style="margin: 5px">
        <a
          href="/getThisJourney/?id=<%=i.id%>"
          style="text-decoration: none; color: black"
        >
          <p>Profit : â‚¹ <%=i.profit%></p>
          <h3 class="text-capitalize"><%=i.jname%></h3></a
        >
        <a href="/deleteThisJourney/?id=<%=i.id%>"
          ><button class="btn btn-danger">Delete</button></a
        >
      </div>
      <%}%> <% for (i of data.otherExp.reverse()){%>
      <!--varaiables-->
      <% let getlink="/getThisExpenseDetail/?id="+i.id; let price=i.totalPrice;
      let name=i.oname; let dataTarget="#myModal"+i._id; let
      dataTargetId="myModal"+i._id; let content="Update Name"; let
      updatelink="/updateOtherExpensive/?id="+i._id; let
      deletelink="/deleteOtherExpensive/?id="+i._id %>
      <!-- partails cart2-->
      <%-
      include('_card2',{price:price,getlink:getlink,name:name,dataTarget:dataTarget,
      dataTargetId:dataTargetId,content:content,updatelink:updatelink,deletelink:deletelink});%>
      <%}%>
    </div>
  </body>
</html>
