<!DOCTYPE html>
<html>
  <head>
    <title>Record Book</title>

    <link rel="stylesheet" href="/assest/css/home.css" />
  </head>
  <body>
    <%- include('_navbar'); %>

    <div class="container-fluid">
      <div class="row" style="float: right">
        <div class="col-sm-11">
          <button
            class="btn btn-info"
            data-toggle="modal"
            data-target="#myModal1"
          >
            Add Vehical
          </button>
          <!-- Modal -->
          <div class="modal fade" id="myModal1" role="dialog">
            <div class="modal-dialog">
              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">
                    &times;
                  </button>
                  <h4 class="modal-title">Add New Vehical name</h4>
                </div>
                <form action="/addVehicle" method="post" class="form-group">
                  <div class="modal-body">
                    <input
                      type="text"
                      name="title"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Add</button>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <button
            class="btn btn-info"
            data-toggle="modal"
            data-target="#myModal2"
          >
            Add Other Title
          </button>
        </div>
        <!-- Modal 1-->
        <div class="modal fade" id="myModal2" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                  &times;
                </button>
                <h4 class="modal-title">Enter Other Name</h4>
              </div>
              <form action="/addPersonal" method="post" class="form-group">
                <div class="modal-body">
                  <input
                    type="text"
                    name="title"
                    class="form-control"
                    autofocus
                    required
                  />
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-success">Add</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col-sm-1"></div>
      </div>
    </div>

    <div class="container-fluid">
      <% for (i of vdata){%>
      <!-- variables -->
      <% let getlink = "/getMonths/?id="+i._id+"&vname="+i.vname; let name =
      i.vname; let dataTarget= "#myModal3"+i._id; let dataTargetId =
      "myModal3"+i._id; let content ="Update Vehical Name"; let updatelink =
      "/updateVehicalName/?id="+i.id; let deletelink =
      "/deleteVehicle/?id="+i._id; %>
      <%-include('_card1',{getlink:getlink,name:name,dataTarget:dataTarget,dataTargetId:dataTargetId,content:content,updatelink:updatelink,deletelink:deletelink});
      %> <%}%> <% for (i of odata){%>
      <!-- variables -->
      <% let getlink = "/getPersonalMonth/?id="+i._id+"&vname="+i.title; let
      name =i.title; let dataTarget= "#myModal4"+i._id; let dataTargetId =
      "myModal4"+i._id; let content ="Update Other Name"; let updatelink =
      "/updatePersonal/?id="+i.id; let deletelink =
      "/deletePersonal/?id="+i._id; %>
      <%-include('_card1',{getlink:getlink,name:name,dataTarget:dataTarget,dataTargetId:dataTargetId,content:content,updatelink:updatelink,deletelink:deletelink});
      %> <%}%>
    </div>
  </body>
</html>
