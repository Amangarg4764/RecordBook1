<button class="btn btn-info" data-toggle="modal" data-target="#myModal">
  Add Journey
</button>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h4 class="modal-title">Add Vehical Journey details</h4>
      </div>
      <form id="formadd" class="form-group">
        <div class="modal-body">
          <label for="title">Journry Name</label>
          <input
            type="text"
            name="title"
            class="form-control"
            id="title"
            required
          />
          <label for="arrival">Arrival date</label>
          <% var iu=new Date() %>
          <input
            type="date"
            name="arrival"
            class="form-control"
            id="arrival"
            value='<%=iu.toISOString().split("T")[0]%>'
            required
          />
        </div>
        <div class="modal-footer">
          <button
            class="btn btn-success"
            onclick="add('/addJourney/?id=<%=data._id%>','#myModal');"
          >
            Add
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
