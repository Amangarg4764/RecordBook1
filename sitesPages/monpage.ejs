<!DOCTYPE html>
<html>
  <head>
    <title>Record Book</title>
    <link rel="stylesheet" href="/assest/css/home.css" />
  </head>

  <body>
    <%- include('_navbar'); %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12">
          <p><%=vmdata.vname%></p>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-11">
          <button
            class="btn btn-info"
            data-toggle="modal"
            data-target="#myModal5"
            style="float: right"
          >
            Add Month
          </button>
        </div>
        <!-- Modal 1-->
        <div class="modal fade" id="myModal5" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                  &times;
                </button>
                <h4 class="modal-title">Enter Month Name</h4>
              </div>
              <form
                action="/addMonth/?vid=<%=vmdata._id%>"
                method="post"
                class="form-group"
              >
                <div class="modal-body">
                  <label for="title">Enter Month Name</label>
                  <input
                    type="text"
                    name="title"
                    id="title"
                    class="form-control"
                    required
                  />
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-success">ADD</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col-sm-1"></div>
      </div>
    </div>

    <div class="container-fluid">
      <h2 class="page-header"><%=vmdata.vname%></h2>

      <% for (i of vmdata.months.reverse()){%>
      <!-- variables -->
      <% let getlink = "/getJAO/?id="+i._id; let name = i.mname; let dataTarget
      = "#myModal2"+i._id; let dataTargetId = "myModal2"+i._id; let content =
      "Update Month Name"; let updatelink = "/updateMonth/?id="+i._id; let
      deletelink = "/deleteMonth/?id="+i._id; %>
      <%-include('_card1',{getlink:getlink,name:name,dataTarget:dataTarget,dataTargetId:dataTargetId,content:content,updatelink:updatelink,deletelink:deletelink});
      %> <%}%>
    </div>
  </body>
</html>
