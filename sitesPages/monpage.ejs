<!DOCTYPE html>
<html>
  <head>
    <title>Record Book</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
      * {
        padding: 0px;
        margin: 0px;
      }

      .flex1 {
        float: right;
      }
    </style>
  </head>

  <body>
    <div class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a href="#" class="navbar-brand">RecordBook</a>
        </div>
        <div class="flex1">
          <p class="navbar-text">
            Signed in as <a href="/logout" class="navbar-link">Aman garg</a>
          </p>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12">
          <p><%=vmdata.vname%></p>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-11">
          <button
            class="btn btn-info"
            data-toggle="modal"
            data-target="#myModal5"
            style="float: right"
          >
            Add Month
          </button>
        </div>
        <!-- Modal 1-->
        <div class="modal fade" id="myModal5" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                  &times;
                </button>
                <h4 class="modal-title">Enter Month Name</h4>
              </div>
              <form
                action="/addMonth/?vid=<%=vmdata._id%>"
                method="post"
                class="form-group"
              >
                <div class="modal-body">
                  <label for="title">Enter Month Name</label>
                  <input
                    type="text"
                    name="title"
                    id="title"
                    class="form-control"
                    required
                  />
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-success">ADD</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col-sm-1"></div>
      </div>
    </div>
    <div class="container-fluid">
      <h2 class="page-header"><%=vmdata.vname%></h2>

      <% for (i of vmdata.months.reverse()){%>

      <div class="btn btn-default btn-lg" role="button" style="margin: 5px">
        <a
          href="/getJAO/?id=<%=i._id%>"
          style="text-decoration: none; color: black"
        >
          <h3><%=i.mname%></h3>
        </a>
        <button
          class="btn btn-warning"
          data-toggle="modal"
          data-target="#myModal2<%=i._id%>"
        >
          Edit
        </button>
        <!-- Modal 1-->
        <div class="modal fade" id="myModal2<%=i._id%>" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                  &times;
                </button>
                <h4 class="modal-title">Update Month Name</h4>
              </div>
              <form
                action="/updateMonth/?id=<%=i._id%>"
                method="post"
                class="form-group"
              >
                <div class="modal-body">
                  <input
                    type="text"
                    name="title"
                    class="form-control"
                    value="<%=i.mname%>"
                    autofocus
                    required
                  />
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-success">Save</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <a href="/deleteMonth/?id=<%=i._id%>"
          ><button class="btn btn-danger">Delete</button></a
        >
      </div>
      <%}%>
    </div>
  </body>
</html>
